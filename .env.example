# OpenAI API Key (REQUIRED)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# LangSmith (Optional - for traceability and monitoring)
# Register at: https://smith.langchain.com/
LANGSMITH_TRACING=true
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_API_KEY=your_langsmith_api_key
LANGSMITH_PROJECT=Book-recommender-AI-agent

# Database Configuration
DATABASE_URL=sqlite:///sessions.db

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000

# Streamlit Configuration
STREAMLIT_PORT=8501

# ChromaDB Configuration (for vector storage)
CHROMA_DB_PATH=./notebooks/chroma_db

# Logging Configuration
LOG_LEVEL=INFO
